AcceptPathInfo Off
DirectoryIndex index.php index.html
Options SymLinksIfOwnerMatch
AddCharset utf-8 .txt .html .htm .css .js .json .xml .md

<Files ".*"> # 禁止連向隱藏檔
	Require all denied
</Files>
<Files "xmlrpc.php">
	Require all denied
</Files>

<IfModule rewrite_module>
	RewriteEngine On

	# 強制允許對 /.well-knwon/ 的連線，不會被後面甚至上層目錄的的規則改寫
	RewriteRule ^\.well-known/ - [END]

	# 擋掉沒有 User-Agent 標頭的連線
	RewriteCond %{HTTP_USER_AGENT} ^$
	RewriteRule ^ - [F,END]

	# 強制 HTTPS
	RewriteCond %{HTTPS} off
	RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [R=301,QSA,L]

	# 禁止連向的目錄（常見於惡意爬蟲）
	RewriteRule (^|/)\. - [R=404,L]
	RewriteRule (^|/)vendor/ - [R=404,L]
	RewriteRule (^|/)node_modules/ - [R=404,L]
	RewriteRule (^|/)wp-login - [R=404,L]
	RewriteRule (^|/)wp-admin - [R=404,L]
	RewriteRule (^|/)wp-inlcudes - [R=404,L]

	# 根目錄中，僅有 favicon.ico 和 robots.txt 是可存取的靜態檔案
	RewriteRule ^favicon\.ico$ - [L]
	RewriteRule ^robots\.txt$ - [L]
	RewriteRule ^[^/]+\.php$ - [L]
	RewriteRule ^[^/]+$ - [R=404,L] # 這條可能跟下面衝突

	# 找不到就導向特定檔案。適用如 WordPress 的網址設計，或是想用相對路徑指定錯誤頁面。
	# RewriteCond %{REQUEST_FILENAME} !-f
	# RewriteCond %{REQUEST_FILENAME} !-d
	# RewriteRule . error.php [QSA,L]
</IfModule>

<IfModule headers_module>
	Header always set Strict-Transport-Security max-age=31536000 env=HTTPS
	Header always set Referrer-Policy same-origin
	<FilesMatch "^(?!.+\.php$)">
		Header always set Cache-Control "max-age=86400, must-revalidate, public"
	</FilesMatch>
</IfModule>
