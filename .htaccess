AcceptPathInfo Off
DirectoryIndex index.php index.html
Options SymLinksIfOwnerMatch
AddCharset utf-8 .txt .html .htm .css .js .json .xml .md

<Files ".*"> # 禁止連向隱藏檔
	Require all denied
</Files>
<Files "xmlrpc.php">
	Require all denied
</Files>

<IfModule rewrite_module>
	RewriteEngine On

	# 強制 HTTPS ，除了 /.well-knwon/
	RewriteRule ^\.well-known/ - [END]
	RewriteCond %{HTTPS} off
	RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [R=301,QSA,L]

	# 禁止連向隱藏目錄
	RewriteRule (^|/)\. - [R=404,L]

	# 常見的惡意爬蟲
	RewriteRule wp-admin - [R=404,L]
	RewriteRule wp-inlcudes - [R=404,L]

	# 根目錄中，僅有 favicon.ico 和 robots.txt 是可存取的靜態檔案
	RewriteRule ^(favicon\.ico|robots\.txt|.*\.php)$ - [L]

	# 找不到就導向 error.php
	RewriteCond %{REQUEST_FILENAME} !-f
	RewriteCond %{REQUEST_FILENAME} !-d
	RewriteRule !^favicon\.ico$ error.php?status=404 [QSA,L]
</IfModule>

<IfModule headers_module>
	Header always set Strict-Transport-Security max-age=31536000 env=HTTPS
	Header always set Referrer-Policy same-origin
	<FilesMatch "^(?!.+\.php$)">
		Header always set Cache-Control "max-age=86400, must-revalidate, public"
	</FilesMatch>
</IfModule>
